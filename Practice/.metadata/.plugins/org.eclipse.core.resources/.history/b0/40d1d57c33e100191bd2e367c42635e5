		System.out.println(outcome);
		
		String outcome1 = everynthchar.everyNth("abcdefg", 2);
		System.out.println(outcome1);
		
		String outcome2 = everynthchar.everyNth("abcdefg", 2);
		System.out.println(outcome2);
		
		if(outcome == "Mrce" && outcome1 == "aceg"  && outcome2 == "adg")
		{
			System.out.println("EveryNthChar: " + outcome + outcome1 + outcome2);
		}
		
	}

