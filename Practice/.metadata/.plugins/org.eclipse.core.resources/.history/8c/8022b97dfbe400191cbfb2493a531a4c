package practice;

public class Student
{
	private String name;
	private int age;
	
	public static int numberOfStudents;
	
		public Student(String name, int age)
		{
			this.name = name;
			this.age = age;
			/**
			 * //we can use the class Student and the variable name numberOfStudents, 
			 * this is how a static is accessed,gives me access to the static method
			 */
			numberOfStudents++;
		}

		//getters and setters
		public String getName() {
			return name;
		}

		public void setName(String name) {
			this.name = name;
		}

		public int getAge() {
			return age;
		}

		public void setAge(int age) {
			this.age = age;
		}

		public static int getNumberOfStudents() {
			return numberOfStudents;
		}

		public static void setNumberOfStudents(int numberOfStudents) {
			Student.numberOfStudents = numberOfStudents;
		}
	
}
